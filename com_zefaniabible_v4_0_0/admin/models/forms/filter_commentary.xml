<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_ZEFANIABIBLE_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
		<field 
			name="bible_id"
			type="sql"
			label="COM_ZEFANIABIBLE_COMMENTARY_FIELD_BIBLE_ID_LABEL"
			description="COM_ZEFANIABIBLE_COMMENTARY_FIELD_BIBLE_ID_DESC"
			default=""
			query="SELECT DISTINCT bible_id FROM #__zefaniabible_comment_text"
			key_field="bible_id"
			value_field="bible_id"
			onchange="this.form.submit();"
			required="1"
			>
			<option value="">COM_ZEFANIABIBLE_ZEFANIABIBLE_COMMENT_TEXT_FIELD_BIBLE_ID_FILTER</option>
		</field>					
		<field 
			name="book_id"
			type="sql"
			label="COM_ZEFANIABIBLE_COMMENTARY_FIELD_BOOK_ID_LABEL"
			description="COM_ZEFANIABIBLE_COMMENTARY_FIELD_BOOK_ID_DESC"
			default=""
			query="SELECT DISTINCT book_id FROM #__zefaniabible_comment_text"
			key_field="book_id"
			value_field="book_id"
			onchange="this.form.submit();"
			required="1"
			>
			<option value="">COM_ZEFANIABIBLE_ZEFANIABIBLE_COMMENT_TEXT_FIELD_BOOK_ID_FILTER</option>
		</field>					
		<field 
			name="chapter_id"
			type="sql"
			label="COM_ZEFANIABIBLE_COMMENTARY_FIELD_CHAPTER_ID_LABEL"
			description="COM_ZEFANIABIBLE_COMMENTARY_FIELD_CHAPTER_ID_DESC"
			default=""
			query="SELECT DISTINCT chapter_id FROM #__zefaniabible_comment_text"
			key_field="chapter_id"
			value_field="chapter_id"
			onchange="this.form.submit();"
			required="1"
			>
			<option value="">COM_ZEFANIABIBLE_ZEFANIABIBLE_COMMENT_TEXT_FIELD_CHAPTER_ID_FILTER</option>
		</field>					
		<field 
			name="verse_id"
			type="sql"
			label="COM_ZEFANIABIBLE_COMMENTARY_FIELD_VERSE_ID_LABEL"
			description="COM_ZEFANIABIBLE_COMMENTARY_FIELD_VERSE_ID_DESC"
			default=""
			query="SELECT DISTINCT verse_id FROM #__zefaniabible_comment_text"
			key_field="verse_id"
			value_field="verse_id"
			onchange="this.form.submit();"
			required="1"
			>
			<option value="">COM_ZEFANIABIBLE_ZEFANIABIBLE_COMMENT_TEXT_FIELD_VERSE_ID_FILTER</option>
		</field>					
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_ZEFANIABIBLE_LIST_FULL_ORDERING"
			description="COM_ZEFANIABIBLE_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.title ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_ZEFANIABIBLE_LIST_LIMIT"
			description="COM_ZEFANIABIBLE_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>