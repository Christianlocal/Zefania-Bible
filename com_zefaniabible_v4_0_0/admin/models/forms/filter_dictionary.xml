<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_ZEFANIABIBLE_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
		<field 
			name="dict_id"
			type="sql"
			label="COM_ZEFANIABIBLE_DICTIONARY_FIELD_DICT_ID_LABEL"
			description="COM_ZEFANIABIBLE_DICTIONARY_FIELD_DICT_ID_DESC"
			default=""
			query="SELECT DISTINCT dict_id FROM #__zefaniabible_dictionary_detail"
			key_field="dict_id"
			value_field="dict_id"
			onchange="this.form.submit();"
			required="1"
			>
			<option value="">COM_ZEFANIABIBLE_ZEFANIABIBLE_DICTIONARY_DETAIL_FIELD_DICT_ID_FILTER</option>
		</field>					
		<field 
			name="item"
			type="sql"
			label="COM_ZEFANIABIBLE_DICTIONARY_FIELD_ITEM_LABEL"
			description="COM_ZEFANIABIBLE_DICTIONARY_FIELD_ITEM_DESC"
			default=""
			query="SELECT DISTINCT item FROM #__zefaniabible_dictionary_detail"
			key_field="item"
			value_field="item"
			onchange="this.form.submit();"
			required="1"
			>
			<option value="">COM_ZEFANIABIBLE_ZEFANIABIBLE_DICTIONARY_DETAIL_FIELD_ITEM_FILTER</option>
		</field>					
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_ZEFANIABIBLE_LIST_FULL_ORDERING"
			description="COM_ZEFANIABIBLE_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.title ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_ZEFANIABIBLE_LIST_LIMIT"
			description="COM_ZEFANIABIBLE_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>