				label="COM_ZEFANIABIBLE_PRIMARY_READING_PLAN" 
				description="COM_ZEFANIABIBLE_PRIMARY_READING_PLAN_DESC" 
				query="SELECT name, alias FROM #__zefaniabible_zefaniareading WHERE publish=1 ORDER BY name"
				key_field="alias"
				value_field = "name"
			/>
		</fieldset>
	</fields>
