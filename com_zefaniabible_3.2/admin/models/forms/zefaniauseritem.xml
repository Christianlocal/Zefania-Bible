<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="adduser.form" addfieldpath="/administrator/components/com_zefaniabible/models/fields">

		<field name="user_name"
				alias="user_name"
				label="ZEFANIABIBLE_FIELD_USER_NAME"
				filter="STRING"
				type="cktext"/>

		<field name="email"
				alias="email"
				label="ZEFANIABIBLE_FIELD_EMAIL"
				filter="STRING"
				class="validate[custom[email]]"
				validate="email"
				type="cktext"/>

		<field name="bible_version"
				alias="_bible_version_bible_name"
				label="ZEFANIABIBLE_FIELD_BIBLE_VERSION"
				filter="INT"
				listKey="id"
				labelKey="bible_name"
				type="ckcombo"
				nullLabel="ZEFANIABIBLE_JSEARCH_SELECT_BIBLE_VERSION"/>

		<field name="plan"
				alias="_plan_name"
				label="ZEFANIABIBLE_FIELD_READING_PLAN"
				filter="INT"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				nullLabel="ZEFANIABIBLE_JSEARCH_SELECT_READING_PLAN"/>

		<field name="send_reading_plan_email"
				alias="send_reading_plan_email"
				label="ZEFANIABIBLE_FIELD_SEND_READING_PLAN_EMAIL"
				filter="BOOL"
				listKey="value"
				type="ckradio"
				viewType="both">
			<option value="0" icon="icomoon-cancel" color="danger">ZEFANIABIBLE_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">ZEFANIABIBLE_FIELDS_BOOL_YES</option>
		</field>

		<field name="send_verse_of_day_email"
				alias="send_verse_of_day_email"
				label="ZEFANIABIBLE_FIELD_SEND_VERSE_OF_DAY_EMAIL"
				filter="BOOL"
				listKey="value"
				type="ckradio"
				viewType="both">
			<option value="0" icon="icomoon-cancel" color="danger">ZEFANIABIBLE_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">ZEFANIABIBLE_FIELDS_BOOL_YES</option>
		</field>

		<field name="reading_start_date"
				alias="reading_start_date"
				label="ZEFANIABIBLE_FIELD_READING_START_DATE"
				filter="STRING"
				type="ckcalendar"
				format="Y-m-d"/>

		<field name="user_id"
				alias="_user_id_name"
				label="ZEFANIABIBLE_FIELD_JOOMLA_USER"
				filter="INT"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				nullLabel="ZEFANIABIBLE_JSEARCH_SELECT_JOOMLA_USER"/>
	</fieldset>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_zefaniabible/models/fields">

		<field name="filter_send_reading_plan_email"
				listKey="value"
				type="ckcombo"
				submit="true"
				nullLabel="ZEFANIABIBLE_FILTER_NULL_SEND_READING_PLAN_EMAIL"
				class="span-2 element-filter"
				label="ZEFANIABIBLE_JSEARCH_SEND_READING_PLAN_EMAIL"
				ui="chosen">
			<option value="0" icon="icomoon-cancel" color="danger">ZEFANIABIBLE_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">ZEFANIABIBLE_FIELDS_BOOL_YES</option>
		</field>

		<field name="search_search"
				type="cksearch"
				placeholder="ZEFANIABIBLE_FILTER_NULL_USER_NAME_PLAN_BIBLE_VERSION"
				label="ZEFANIABIBLE_JSEARCH_USER_NAME_PLAN_BIBLE_VERSION"
				class="element-search search-query"
				ui="chosen"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="span-2 element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_zefaniabible/models/fields">

		<field name="filter_send_reading_plan_email"
				listKey="value"
				type="ckcombo"
				submit="true"
				nullLabel="ZEFANIABIBLE_FILTER_NULL_SEND_READING_PLAN_EMAIL"
				class="span-2 element-filter"
				label="ZEFANIABIBLE_JSEARCH_SEND_READING_PLAN_EMAIL"
				ui="chosen">
			<option value="0" icon="icomoon-cancel" color="danger">ZEFANIABIBLE_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">ZEFANIABIBLE_FIELDS_BOOL_YES</option>
		</field>

		<field name="search_search_1"
				type="cksearch"
				placeholder="ZEFANIABIBLE_FILTER_NULL_USER_NAME_PLAN_BIBLE_VERSION"
				label="ZEFANIABIBLE_JSEARCH_USER_NAME_PLAN_BIBLE_VERSION"
				class="element-search search-query"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="span-2 element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>
</form>