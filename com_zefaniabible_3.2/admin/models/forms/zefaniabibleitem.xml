<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="bibleadd.form" addfieldpath="/administrator/components/com_zefaniabible/models/fields">

		<field name="bible_name"
				alias="bible_name"
				label="ZEFANIABIBLE_FIELD_BIBLE_NAME"
				filter="STRING"
				class="validate[custom[quote]]"
				validate="quote"
				type="cktext"/>

		<field name="alias"
				alias="alias"
				label="ZEFANIABIBLE_FIELD_ALIAS"
				filter="STRING"
				type="cktext"/>

		<field name="xml_bible_file_location"
				alias="xml_bible_file_location"
				label="ZEFANIABIBLE_FIELD_XML_BIBLE_FILE_LOCATION"
				filter="STRING"
				ruleInstance="file_6287"
				indirect="true"
				root="[DIR_BIBLENAMES_XML_BIBLE_FILE_LOCATION]"
				type="ckfile"
				allowedExtensions="*.xml"/>

		<field name="xml_audio_file_location"
				alias="xml_audio_file_location"
				label="ZEFANIABIBLE_FIELD_XML_AUDIO_FILE_LOCATION"
				filter="STRING"
				ruleInstance="file_4899"
				indirect="true"
				root="[DIR_BIBLENAMES_XML_AUDIO_FILE_LOCATION]"
				type="ckfile"
				allowedExtensions="*.xml"/>

		<field name="ordering"
				alias="ordering"
				label="ZEFANIABIBLE_FIELD_ORDERING"
				filter="INT"
				class="validate[custom[numeric]]"
				validate="numeric"
				access="core.edit.state"
				type="ckordering"
				labelKey="bible_name"/>

		<field name="published"
				alias="published"
				label="ZEFANIABIBLE_FIELD_PUBLISH"
				filter="INT"
				class="validate[custom[numeric]]"
				validate="numeric"
				access="core.edit.state"
				type="ckstate"/>

		<field name="access"
				alias="_access_title"
				label="ZEFANIABIBLE_FIELD_ACCESS_LEVEL"
				filter="INT"
				access="core.edit"
				listKey="id"
				labelKey="title"
				type="ckaccesslevel"
				nullLabel="ZEFANIABIBLE_FILTER_NULL_SELECT_ACCESS"/>
	</fieldset>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_zefaniabible/models/fields">

		<field name="search_search"
				type="cksearch"
				placeholder="ZEFANIABIBLE_FILTER_NULL_SEARCH"
				label="ZEFANIABIBLE_JSEARCH_SEARCH"
				class="element-search search-query"
				ui="chosen"/>

		<field name="filter_published"
				type="ckstate"
				access="core.edit.state"
				submit="true"
				nullLabel="ZEFANIABIBLE_FILTER_NULL_SELECT_STATE"
				display="combo"
				label="State"
				class="element-filter span-2"
				ui="chosen"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="span-2 element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="scripture.filters" addfieldpath="/administrator/components/com_zefaniabible/models/fields">

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="span-2 element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_zefaniabible/models/fields">

		<field name="search_search_1"
				type="cksearch"
				placeholder="ZEFANIABIBLE_FILTER_NULL_SEARCH"
				label="ZEFANIABIBLE_JSEARCH_SEARCH"
				class="element-search search-query"
				ui="chosen"/>

		<field name="filter_published"
				type="ckstate"
				access="core.edit.state"
				submit="true"
				nullLabel="ZEFANIABIBLE_FILTER_NULL_SELECT_STATE"
				display="combo"
				label="State"
				class="element-filter span-2"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="span-2 element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>
</form>