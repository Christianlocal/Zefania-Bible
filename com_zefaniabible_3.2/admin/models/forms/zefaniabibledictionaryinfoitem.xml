<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="adddictionary.form_1" addfieldpath="/administrator/components/com_zefaniabible/models/fields">

		<field name="name"
				alias="name"
				label="ZEFANIABIBLE_FIELD_DICTIONARY_NAME"
				filter="STRING"
				type="cktext"/>

		<field name="alias"
				alias="alias"
				label="ZEFANIABIBLE_FIELD_ALIAS"
				filter="STRING"
				class="validate[custom[length10]]"
				validate="length10"
				type="cktext"/>

		<field name="xml_file_url"
				alias="xml_file_url"
				label="ZEFANIABIBLE_FIELD_XML_FILE"
				filter="STRING"
				ruleInstance="file_8164"
				indirect="true"
				root="[DIR_ZEFANIABIBLEDICTIONARYINFO_XML_FILE_URL]"
				type="ckfile"
				allowedExtensions="*.xml"/>

		<field name="ordering"
				alias="ordering"
				label="ZEFANIABIBLE_FIELD_ORDERING"
				filter="INT"
				class="validate[custom[numeric]]"
				validate="numeric"
				access="core.edit.state"
				type="ckordering"
				labelKey="name"/>

		<field name="published"
				alias="published"
				label="ZEFANIABIBLE_FIELD_PUBLISH"
				filter="INT"
				class="validate[custom[numeric]]"
				validate="numeric"
				access="core.edit.state"
				type="ckstate"/>

		<field name="access"
				alias="_access_title"
				label="ZEFANIABIBLE_FIELD_ACCESS_LEVEL"
				filter="INT"
				access="core.edit"
				listKey="id"
				labelKey="title"
				type="ckaccesslevel"
				nullLabel="ZEFANIABIBLE_FILTER_NULL_SELECT_ACCESS"/>
	</fieldset>

	<fieldset name="adddictionary.form_2" addfieldpath="/administrator/components/com_zefaniabible/models/fields"/>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_zefaniabible/models/fields">

		<field name="search_search"
				type="ckstate"
				access="core.edit.state"
				nullLabel="ZEFANIABIBLE_FILTER_NULL_SELECT_STATE"
				display="combo"
				label="ZEFANIABIBLE_JSEARCH_SEARCH"
				class="element-search search-query"
				ui="chosen"/>

		<field name="search_search_1"
				type="cksearch"
				placeholder="ZEFANIABIBLE_FILTER_NULL_NAME_ALIAS"
				label="ZEFANIABIBLE_JSEARCH_NAME_ALIAS"
				class="element-search search-query"
				ui="chosen"/>

		<field name="filter_published"
				type="ckstate"
				access="core.edit.state"
				submit="true"
				nullLabel="ZEFANIABIBLE_FILTER_NULL_SELECT_STATE"
				display="combo"
				label="State"
				class="element-filter span-2"
				ui="chosen"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="span-2 element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_zefaniabible/models/fields">

		<field name="search_search_2"
				type="ckstate"
				access="core.edit.state"
				nullLabel="ZEFANIABIBLE_FILTER_NULL_SELECT_STATE"
				display="combo"
				label="ZEFANIABIBLE_JSEARCH_SEARCH"
				class="element-search search-query"
				ui="chosen"/>

		<field name="search_search_3"
				type="cksearch"
				placeholder="ZEFANIABIBLE_FILTER_NULL_NAME_ALIAS"
				label="ZEFANIABIBLE_JSEARCH_NAME_ALIAS"
				class="element-search search-query"
				ui="chosen"/>

		<field name="filter_published"
				type="ckstate"
				access="core.edit.state"
				submit="true"
				nullLabel="ZEFANIABIBLE_FILTER_NULL_SELECT_STATE"
				display="combo"
				label="State"
				class="element-filter span-2"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="span-2 element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>
</form>