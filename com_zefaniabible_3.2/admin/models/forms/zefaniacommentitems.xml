<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="commentaryadd.form" addfieldpath="/administrator/components/com_zefaniabible/models/fields">

		<field name="title"
				alias="title"
				label="ZEFANIABIBLE_FIELD_TITLE"
				filter="STRING"
				class="validate[custom[quote]]"
				validate="quote"
				type="cktext"/>

		<field name="alias"
				alias="alias"
				label="ZEFANIABIBLE_FIELD_ALIAS"
				filter="STRING"
				type="cktext"/>

		<field name="full_name"
				alias="full_name"
				label="ZEFANIABIBLE_FIELD_FULL_NAME"
				filter="STRING"
				type="cktext"/>

		<field name="ordering"
				alias="ordering"
				label="ZEFANIABIBLE_FIELD_ORDERING"
				filter="INT"
				class="validate[custom[numeric]]"
				validate="numeric"
				access="core.edit.state"
				type="ckordering"
				labelKey="title"/>

		<field name="file_location"
				alias="file_location"
				label="ZEFANIABIBLE_FIELD_FILE_LOCATION"
				filter="STRING"
				ruleInstance="file_1479"
				indirect="true"
				root="[DIR_ZEFANIACOMMENT_FILE_LOCATION]"
				type="ckfile"
				allowedExtensions="*.xml"/>

		<field name="access"
				alias="_access_title"
				label="ZEFANIABIBLE_FIELD_ACCESS_LEVEL"
				filter="INT"
				access="core.edit"
				listKey="id"
				labelKey="title"
				type="ckaccesslevel"
				nullLabel="ZEFANIABIBLE_FILTER_NULL_SELECT_ACCESS"/>

		<field name="published"
				alias="published"
				label="ZEFANIABIBLE_FIELD_PUBLISH"
				filter="INT"
				class="validate[custom[numeric]]"
				validate="numeric"
				access="core.edit.state"
				type="ckstate"/>
	</fieldset>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_zefaniabible/models/fields">

		<field name="search_search"
				type="cksearch"
				placeholder="ZEFANIABIBLE_FILTER_NULL_SEARCH"
				label="ZEFANIABIBLE_JSEARCH_SEARCH"
				class="element-search search-query"
				ui="chosen"/>

		<field name="filter_published"
				type="ckstate"
				access="core.edit.state"
				submit="true"
				nullLabel="ZEFANIABIBLE_FILTER_NULL_SELECT_STATE"
				display="combo"
				label="State"
				class="element-filter span-2"
				ui="chosen"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="span-2 element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_zefaniabible/models/fields">

		<field name="search_search_1"
				type="cksearch"
				placeholder="ZEFANIABIBLE_FILTER_NULL_SEARCH"
				label="ZEFANIABIBLE_JSEARCH_SEARCH"
				class="element-search search-query"
				ui="chosen"/>

		<field name="filter_published"
				type="ckstate"
				access="core.edit.state"
				submit="true"
				nullLabel="ZEFANIABIBLE_FILTER_NULL_SELECT_STATE"
				display="combo"
				label="State"
				class="element-filter span-2"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="span-2 element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>
</form>