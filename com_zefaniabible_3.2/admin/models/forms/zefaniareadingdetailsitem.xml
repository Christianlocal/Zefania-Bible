<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="addreadingdetails.form" addfieldpath="/administrator/components/com_zefaniabible/models/fields">

		<field name="plan"
				alias="_plan_name"
				label="ZEFANIABIBLE_FIELD_READING_PLAN"
				filter="INT"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				nullLabel="ZEFANIABIBLE_JSEARCH_SELECT_READING_PLAN"/>

		<field name="begin_chapter"
				alias="begin_chapter"
				label="ZEFANIABIBLE_FIELD_BEGIN_CHAPTER"
				filter="INT"
				class="validate[custom[numeric]]"
				validate="numeric"
				type="cktext"/>

		<field name="begin_verse"
				alias="begin_verse"
				label="ZEFANIABIBLE_FIELD_BEGIN_VERSE"
				filter="INT"
				class="validate[custom[numeric]]"
				validate="numeric"
				type="cktext"/>

		<field name="end_chapter"
				alias="end_chapter"
				label="ZEFANIABIBLE_FIELD_END_CHAPTER"
				filter="INT"
				class="validate[custom[numeric]]"
				validate="numeric"
				type="cktext"/>

		<field name="end_verse"
				alias="end_verse"
				label="ZEFANIABIBLE_FIELD_END_VERSE"
				filter="INT"
				class="validate[custom[numeric]]"
				validate="numeric"
				type="cktext"/>

		<field name="day_number"
				alias="day_number"
				label="ZEFANIABIBLE_FIELD_DAY_NUMBER"
				filter="INT"
				class="validate[custom[numeric]]"
				validate="numeric"
				type="cktext"/>

		<field name="description"
				alias="description"
				label="ZEFANIABIBLE_FIELD_DESCRIPTION"
				filter="RAW"
				type="ckeditor"/>

		<field name="ordering"
				alias="ordering"
				label="ZEFANIABIBLE_FIELD_ORDERING"
				filter="INT"
				class="validate[custom[numeric]]"
				validate="numeric"
				access="core.edit.state"
				type="ckordering"
				labelKey="plan"/>
	</fieldset>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_zefaniabible/models/fields">

		<field name="search_search"
				type="cksearch"
				placeholder="ZEFANIABIBLE_FILTER_NULL_SEARCH"
				label="ZEFANIABIBLE_JSEARCH_SEARCH"
				class="element-search search-query"
				ui="chosen"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="span-2 element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_zefaniabible/models/fields">

		<field name="search_search_1"
				type="cksearch"
				placeholder="ZEFANIABIBLE_FILTER_NULL_SEARCH"
				label="ZEFANIABIBLE_JSEARCH_SEARCH"
				class="element-search search-query"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="span-2 element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>
</form>