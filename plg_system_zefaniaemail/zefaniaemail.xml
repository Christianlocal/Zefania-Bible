<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>System - Zefania Bible Email</name>
	<author>Andrei Chernyshev</author>
	<creationDate>Septermber 2012</creationDate>
	<copyright>(C) 2005 - 2012 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see	LICENSE.txt</license>
	<authorEmail>andrei.chernyshev1@gmail.com</authorEmail>
	<authorUrl>www.zefaniabible.com</authorUrl>
	<version>3.2.0</version>
	<description>PLG_ZEFANIABIBLE_EMAIL_XML_DESCRIPTION</description>
	<files>
		<filename plugin="zefaniaemail">zefaniaemail.php</filename>
		<filename>index.html</filename>
	</files>	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="verse_of_day_start_date" type="calendar" label="PLG_ZEFANIABIBLE_READING_START_DATE" description="PLG_ZEFANIABIBLE_READING_START_DATE_DESC" default="2012-1-1" format="%Y-%m-%d" filter="server_utc" />
				<field name="verse_of_day_image" type="media" label="PLG_ZEFANIABIBLE_VERSE_OF_DAY_IMAGE" description="PLG_ZEFANIABIBLE_VERSE_OF_DAY_IMAGE_DESC" />				
				<field name="reading_plan_image" type="media" label="PLG_ZEFANIABIBLE_READING_PLAN_IMAGE" description="PLG_ZEFANIABIBLE_READING_PLAN_IMAGE_DESC" />				
			</fieldset>
		</fields>	
	</config>
	<updateservers>
		<server type="extension" priority="1" name="ZefaniaBible.com">http://www.zefaniabible.com/index.php?option=com_ars&amp;view=update&amp;task=stream&amp;format=xml&amp;id=5</server>
	</updateservers>		
</extension>