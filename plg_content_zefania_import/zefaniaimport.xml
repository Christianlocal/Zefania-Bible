<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
	<name>Content - Zefania Bible Import Bible</name>
	<author>Andrei Chernyshev</author>
	<creationDate>November 2012</creationDate>
	<copyright>Andrei Chernyshev</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>andrei.chernyshev1@gmail.com</authorEmail>
	<authorUrl>http://www.zefaniabible.com/</authorUrl>
	<version>2.7</version>
	<description></description>
  <files>
		<filename plugin="zefaniaimport">zefaniaimport.php</filename>
		<filename>index.html</filename>
	</files>
	<config>
		<fields name="params">	
			<fieldset name="basic">
				<field name="str_bible_xml_file"
					type="filelist"
					label="Bible XML File"
					directory ="media/com_zefaniabible/bibles"
					default =""
					filter=".xml"
					description="This is XML file from which Bible will be imported">			
				</field>
				<field name="str_bible_name" 
					type="text" 
					size="50"
					default = ""
					label="Bible Name" 
					description="This is the name of the Bible" />
				<field name="str_bible_alias" 
					type="text" 
					size="5"
					default = ""
					label="Bible Alias" 
					description="This is the alias of the Bible" />					
				<field name="str_bible_desc" 
					type="textarea" 
					size="100"
					default = ""
					label="Bible Desciption" 
					description="This is the desciption of the Bible" />
					
				<field name="str_audio_xml_file" 
					type="textarea" 
					size="100"
					default = ""
					label="Audio XML File" 
					description="This is audio playlist file." />
									
				<field name="flg_insert_method"
					type="radio"
					default="insert"
					label="Insert Method"
					description="This is method used to insert into DB">
					<option value="insert">Insert</option>
					<option value="update">Update</option>
					<option value="delete">Delete</option>					
			</field>															
			</fieldset>							
		</fields>
	</config>
</extension>